<% logo = image_tag("logo.png", :alt => "Paint the Town", :class => "floatleft") %>
<nav>
  <div id="nav-wrapper">
  	<div class="nav-container">
	  <%= link_to logo, root_path %>
	  <% if signed_in? %>
	  <ul class="nav floatright">
	  <li><a href="<%= post_path %>"><div class="post"></div>Post track</a></li>
	  <li class="pic">
			<a href="<%= user_path(current_user) %>">
				<% unless current_user.image == nil %>
				  <img src="<%= current_user.image %>" />
				<% end %>
				<%= current_user.username %>
			</a>
	  </li>
	  <li><a href="<%= edit_user_path(current_user) %>"><div class="edit"></div></a></li>
	  <li><a href="<%= signout_path %>"><div class="signout"></div></a></li>
	  </ul>
	  <% else %>
	  <ul class="nav floatright">
	  <li><a href="<%= signup_path %>">&#43;<div class="signup"></div>Sign Up</a></li>
	  <li><a href="<%= signin_path %>"><div class="signin"></div>Sign In</a></li>
	  </ul>
	<% end %>
	</div>
  </div>
</nav>

<section class="player-container glossy" id="player-container">
	<div class="player-wrapper">
		<div class="controls">
			<a href="javascript:void(0);" class="icon back" id="back"></a>
			<a href="javascript:void(0);" class="icon playing paused" id="playpause"></a>
			<a href="javascript:void(0);" class="icon next" id="next"></a>
		</div>

		<div class="music-info">
			<span id="videoCurrentTime">--:--</span> <span id="divider">|</span> <span id="videoDuration">--:--</span>
			<span id="track-name">Dirty Cup</span>
		</div>
	</div>

</section>