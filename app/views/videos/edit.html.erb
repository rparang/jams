<div class="left-container">
  <div class="new-track">
  <h1>Update your track</h1>
  <a href="<%= root_path %>">&#8249;&#8249;Back</a>
  <% if @video.errors.any? %>
    <div class="alert">
      <ul class="error-list unstyled">
      <% @video.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="player">
    <iframe title='YouTube video player' width='620' height='340' src='http://www.youtube.com/embed/<%= @video.youtube_id %>?wmode=opaque' frameborder='0' allowfullscreen></iframe>
  </div>
  <%= form_for(@video) do |f| %>
    <ul class="form unstyled">
      <li style="margin-left: 36px;">Artist
        <div class="artist"></div>
        <% @artist.nil? ? artist = "" : artist = @artist.name %>
        <%= f.text_field :artist_name, :value => artist, :class=> "image-round-3", :id => "artist", :size => "53", :maxlength => "155", :autocomplete => "off" %>
      </li>
      <li style="margin-left: 45px;">Title
        <div class="title"></div>
        <%= f.text_field :title, :value => @video.title, :class=> "image-round-3", :size => "53", :maxlength => "155", :autocomplete => "off" %>
      </li>
      <li>Comment
        <div class="comment"></div>
        <%= f.text_field :description, :value => @video.description, :class=> "image-round-3", :size => "53", :maxlength => "255", :autocomplete => "off" %>
      </li>
    </ul>
    <span class="button post-button floatright">
      <div class="post"></div>
      <%= f.submit "Update" %>
    </span>
  <% end %>
  <%= link_to "Delete", @video, :confirm => 'Are you sure you want to delete this track?', :method => :delete %>
  </div>
</div>