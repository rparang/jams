<% logo = image_tag("logo_new_2_big.png", :alt => "Paint the Town", :class => "logo") %>

<div class="sign-in-container">

  <%= link_to logo, root_path %>

  <div id="auth-buttons">
    <%= link_to image_tag("sign-in-facebook.png"), '/auth/facebook', :class => "auth" %>
    <%= link_to image_tag("sign-in-twitter.png"), '/auth/twitter', :class => "auth" %>
  </div>

  <div id="sign-in-holder">Or, <a href="javascript:;" id="sign-in">sign in with an email address</a></div>

  <div id="sign-in-form">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "sign-in-btn btn btn-large" %>
    <% end %>

    <%= link_to "Want to sign up with an email?", signup_path %>
  </div>
</div>

<script>

$("#sign-in").click(function () {
  $("#sign-in-form").toggle();
});

</script>