<% logo = image_tag("logo-big-2.png", :alt => "Paint the Town", :class => "logo") %>

<div class="sign-in-container">

<%= link_to logo, root_path %>

<div>
  <div>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "sign-in-btn btn btn-large" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>

</div>